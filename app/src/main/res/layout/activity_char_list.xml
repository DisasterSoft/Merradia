    <br.com.bloder.magic.view.MagicButton
        android:id="@+id/makechar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:button_icon="@drawable/hammer"
        app:button_icon_height="40dp"
        app:button_icon_width="40dp"
        app:expandable_area_color="#d48484"
        app:hide_text="@string/mkchar"
        app:hide_text_color="@android:color/white"
        app:hide_text_size="10dp"
        app:icon_button_color="#d48484"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout3"
        app:layout_constraintVertical_bias="0.0"
        app:magic_button_size="65dp" />//makecharakter

    <br.com.bloder.magic.view.MagicButton
