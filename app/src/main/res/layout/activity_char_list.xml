        app:button_icon_width="40dp"
        app:expandable_area_color="#aa8aaa"
        app:hide_text="@string/howto"
        app:hide_text_color="@android:color/white"
        app:hide_text_size="8dp"
        app:icon_button_color="#aa8aaa"
        app:layout_constraintBottom_toBottomOf="parent"
